<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true" > <!--버튼이 눌렸을 때 -->
        <shape android:shape="rectangle">
            <corners android:radius="30dp" />
            <stroke android:width="1dp"
                android:color="#A9DEF9" />
            <gradient android:angle="-90"
                android:startColor="#A9DEF9"
                android:endColor="#A9DEF9" />
        </shape>
    </item>

    <item
        android:state_focused="true" > <!--뷰에 포커스가 있을 때 -->
        <shape android:shape="rectangle" >
            <corners android:radius="30dp" />
            <stroke android:width="1dp"
                android:color="#A9DEF9" />
            <solid android:color="#A9DEF9" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="30dp" />
            <stroke android:width="1dp"
                android:color="#A9DEF9" />
            <gradient android:angle="-90"
                android:startColor="#A9DEF9"
                android:endColor="#A9DEF9"/>
        </shape>
    </item>

</selector>